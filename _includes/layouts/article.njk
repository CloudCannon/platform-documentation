---
layout: layouts/base.njk
---

<div class="l-page">
    <div class="l-column">
        <aside class="l-left" x-data="{
            more: true
        }">
            {% import "docnav.njk" as docnav with context %}
            {% set url = page.data.url | replace("/documentation/", "") %}
            {% set url = url.split("/") %}

            {% if url[0] == "beta" %}
                {{ docnav.nav(beta_navigation) }}
            {% elif url[0] == "developer" %}
                {{ docnav.nav(developer_articles) }}
            {% elif url[0] == "user" %}
                {{ docnav.nav(user_articles) }}
            {% else %}
                {{ docnav.nav(navigation[url[0]]) }}
            {% endif %}
        </aside>
        <div class="u-card-box l-content">
            <div class="l-breadcrumb">{{ url[0] | replace("-", " ") | title }} <img src="{{ "arrow_forward_ios:outlined" | icon("material") }}" inline/> <span>{{ details.title }}</span></div>
            <h1 data-pagefind-body class="l-heading u-margin-bottom-0">{{ details.title }}</h1>
            <p class="l-subheading">Last modified: {{ date | date('HUMAN_DATE') }}</h1>
            <div data-pagefind-body data-pagefind-filter="site:Documentation" data-pagefind-meta="site:Documentation" class="l-content-split">
                <main>
                    {{ content | safe }}
                </main>
                <aside data-pagefind-ignore class="l-right">
                    <div class="l-toc">
                        <!-- "On this page" -->
                    </div>
                </aside>
            </div>

            {% include "related-articles.njk" %}
        </div>
    </div>
</div>
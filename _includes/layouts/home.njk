{% set component_count = 0 %}
{% for component in page.data.content_blocks %}
    {% if component._component_type == "card" %}
        CARD
    {% elif component._component_type == "left-right" %}
        LR
    {% elif component._component_type == "centred" %}
        {{ comp.ContentBlocks.CentredBlock({ heading: component.heading, description: component.description, component_count:component_count }) | await | safe }}
    {% endif %}
    {% set component_count = component_count + 1 %}
{% endfor %}
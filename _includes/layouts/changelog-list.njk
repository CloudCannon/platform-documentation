---
layout: layouts/base.njk
title: 'Changelog'
description: List of all changes made to the CloudCannon app
---
<div class="l-page">
    <div class="l-column">
        <aside class="l-left" x-data="{
            more: true
        }">
            {% import "changenav.njk" as changenav with context %}
            {{ changenav.nav("Changelog") }}
        </aside>
        <div class="u-card-box l-small-content">
            <h1 class="l-heading u-margin-bottom-0">
                Changelog
                {% if pagination.page > 1 %}<small>Page: {{ pagination.page }}</small>{% endif %}
            </h1>

            <div class="l-content-split">
                <main>
                {% for changelog in results %}
                    <div class="changelog-entry">
                        <h2 {% if loop.first %}class="u-margin-top-0"{% endif %}><a href="{{ changelog.url }}">{{ changelog.page.data.title }}</a></h2>
                        <p>{{ changelog.page.data.date | date('HUMAN_DATE') }} | {{ changelog.page.data.type | capitalize }}</p>
                        {{ changelog.page | render_page_content | safe }}

                        {% if not loop.last %}<div class="c-br"></div>{% endif %}
                    </div>
                {% endfor %}
                </main>
            
                <aside data-pagefind-ignore class="l-right">
                    <div class="l-toc-changelog-list">
                        <!-- "On this page" -->
                    </div>
                </aside>
            </div>

            {% include "pagination-controls.njk" %}
        </div>
    </div>
</div>


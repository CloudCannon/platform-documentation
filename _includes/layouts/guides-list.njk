---
layout: layouts/base.njk
---

<div class="l-page guide-page">
    <div class="l-column">
        <div class="l-small-content">
            <h1 class="l-heading">{{ title }}</h1>

            {% for section in guide_sections %}
                <h2>{{ section.section_title }}</h2>
                <div class="guide-page__cards {{ section.grid_size }}">
                    {% for item in section.items %}
                        {% set guide = combined_guides | get_by_uuid(item) %}
                        <div class="guide-page__cards--card">
                            <img src="{{ guide.guide_icon}}" width="24" />
                            <h3>{{ guide.guide_title }}</h3>
                            <p>{{ guide.guide_summary }}</p>
                        </div>
                    {% endfor %}
                </div>
            {% endfor %}   
        </div>
    </div>
</div>
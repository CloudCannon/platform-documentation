---
layout: layouts/base.njk
---

<div class="l-page guide-page">
    <div class="l-column">
        <div class="l-small-content">
            <h1 class="l-heading">{{ details.title }}</h1>

            {% for section in details.guide_sections %}
                <h2 data-editable="text" data-prop="section.section_title">{{ section.section_title }}</h2>
                <div class="guide-page__cards {{ section.grid_size }}" data-editable="array" data-prop="section.grid_size">
                    {% for item in section.items %}
                        {% set guide = search.page("_uuid="+item.item) %}
                        <a class="guide-page__cards--card" href="{{ guide.url }}" data-editable="array">
                            <div class="guide-page__cards--card__heading">
                                <img src="{{ guide.guide_icon }}" width="24" data-editable="text" data-prop-src="guide.guide_icon"/>
                                <h3 data-editable="text data-prop="guide.guide_title">{{ guide.guide_title }}</h3>
                            </div>
                            <p data-editable="text" data-prop="guide.guide_summary">{{ guide.guide_summary }}</p>
                            <div class="guide-page__cards--card__card-arrow">
                                <img src="{{ "arrow_forward:outlined" | icon("material") }}" inline />
                            </div>
                            {% if section.grid_size == "lg" and guide.guide_image %}
                                <div class="img-spacer"></div>
                                <img class="guide-page__cards--card__image" src="{{ guide.guide_image }}" />
                            {% endif %}
                        </a>
                    {% endfor %}
                </div>
            {% endfor %}   
        </div>
    </div>
</div>
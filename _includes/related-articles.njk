{% if related_articles | length %}

<h2>Related Resources</h2>

<div>
  <ul class="c-related-article-container">
    {% for related_article_id in related_articles %}
      {% set article = combined_resource_list | get_by_uuid(related_article_id) %}
      {% if article %}
        <li>
          <a class="c-related-article" href="{{ article.url}}">
              <h3 class="c-related-article__title">{{article.title}}</h3>
              {% if article.description %}
                <p class="c-related-article__desc">{{ article.description}}</p>
              {% endif %}
          </a>
        </li>
      {% endif %}
    {% endfor %}
  </ul>
</div>

{% endif %}

{% if related_links | length %}

<h2>Related links</h2>

<div>
  <ul>
    {% for related_link in related_links %}
        <li>
          <a href="{{ related_link.url }}" target="_blank">
            {{ related_link.name }}
          </a>
        </li>
    {% endfor %}
  </ul>
</div>

{% endif %}
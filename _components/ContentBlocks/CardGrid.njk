<div class="c-card-grid">
  <template x-for="card in block.cards">
    <div class="c-card-grid__card" x-bind:class="card.span_two ? 'span-two' : ''">
      <h2 x-text="card.heading"></h2>
      <template x-for="item in card.items">
        <div class="c-card-grid__card--item">
          <div class="c-card-grid__card--item__heading">

            <template x-if="item.icon == 'handshake'">
              <img src="{{ "handshake:outlined" | icon("material") }}">
            </template>
            <template x-if="item.icon == 'web'">
              <img src="{{ "web:outlined" | icon("material") }}">
            </template>
            <template x-if="item.icon == 'design_services'">
              <img src="{{ "design_services:outlined" | icon("material") }}">
            </template>

            <h3 x-text="item.heading"></h3>
          </div>
          <p x-html="item.description"></p>
        </div>
      </template>
    </div>
  </template>
</div>
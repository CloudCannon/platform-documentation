{
  "importMap": "./import_map.json",
  "tasks": {
    "lume": "echo \"import 'lume/cli.ts'\" | deno run --v8-flags=--max-old-space-size=8192 -A -",
    "build": "LUME_LOGS=critical deno task lume",
    "serve": "LUME_LOGS=critical deno task lume -s",
    "check-links": "deno run -A _scripts/check-links.ts"
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "lume",
    "types": [
      "lume/types.ts"
    ],
    "skipLibCheck": true
  },
  "unstable": [
    "temporal",
    "fmt-component"
  ],
  "lint": {
    "plugins": [
      "https://deno.land/x/lume@v3.1.4/lint.ts"
    ],
    "exclude": [
      "assets/js/site.js",
      "_includes/scripts/alpine.js"
    ]
  }
}

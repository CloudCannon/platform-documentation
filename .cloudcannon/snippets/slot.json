{
  "slot": {
    "snippet": "<comp.Slot [[args]]>[[inner]]</comp.Slot>",
    "inline": false,
    "preview": {
      "text": [
        "Content Slot"
      ],
      "subtext": [
        {
          "key": "name"
        }
      ],
      "icon": "select_all"
    },
    "_inputs": {
      "name": {
        "type": "text",
        "comment": "The name of this slot â€” should be referenced when using this piece of common content on a page"
      },
      "default_content": {
        "type": "markdown",
        "comment": "If the slot is not defined when using this piece of common content, this content will be used instead"
      }
    },
    "params": {
      "args": {
        "parser": "key_values",
        "options": {
          "models": [
            {
              "editor_key": "name",
              "type": "string"
            }
          ],
          "format": {
            "ref": "mdx_format"
          }
        }
      },
      "inner": {
        "parser": "content",
        "options": {
          "editor_key": "default_content",
          "allow_nested": true,
          "style": {
            "output": "block",
            "block": {
              "leading": "\n",
              "trailing": "\n",
              "indent": "  "
            }
          }
        }
      }
    }
  }
}
{
  "conditional": {
    "snippet": "<comp.Conditional [[args]]>[[inner]]</comp.Conditional>",
    "inline": false,
    "preview": {
      "text": "Conditional content",
      "subtext": [
        {
          "key": "content_markdown"
        }
      ],
      "icon": "visibility_off"
    },
    "_inputs": {
      "ssgs": {
        "type": "array",
        "comment": "Only show this content block if the user has selected one of these SSGs"
      },
      "ssgs[*]": {
        "type": "select",
        "options": {
          "values": [
            "Jekyll",
            "Hugo",
            "Eleventy"
          ]
        }
      },
      "not_ssgs": {
        "type": "array",
        "comment": "Always show this content block, unless the user has selected one of these SSGs"
      },
      "not_ssgs[*]": {
        "type": "select",
        "options": {
          "values": [
            "Jekyll",
            "Hugo",
            "Eleventy"
          ]
        }
      }
    },
    "params": {
      "args": {
        "parser": "key_values",
        "options": {
          "models": [
            {
              "editor_key": "ssgs",
              "optional": true,
              "type": "array",
              "remove_empty": true
            },
            {
              "editor_key": "not_ssgs",
              "optional": true,
              "type": "array",
              "remove_empty": true
            }
          ],
          "format": {
            "ref": "mdx_format"
          }
        }
      },
      "inner": {
        "parser": "content",
        "options": {
          "editor_key": "content_markdown",
          "style": {
            "block": {
              "leading": "\n",
              "trailing": "\n",
              "indent": "  "
            }
          }
        }
      }
    }
  }
}
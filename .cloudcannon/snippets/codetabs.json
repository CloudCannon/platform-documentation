{
  "codetabs": {
    "snippet": "<comp.CodeTabs>[[tabs]]</comp.CodeTabs>",
    "inline": false,
    "preview": {
      "text": "Code Tabs"
    },
    "params": {
      "tabs": {
        "parser": "repeating",
        "options": {
          "editor_key": "tabs",
          "snippet": "<comp.CodeTab [[tab_args]]>[[content]]</comp.CodeTab>",
          "style": {
            "output": "block",
            "between": "\n",
            "block": {
              "leading": "\n",
              "trailing": "\n",
              "indent": "  "
            }
          }
        }
      },
      "tab_args": {
        "parser": "key_values",
        "options": {
          "models": [
            {
              "editor_key": "language",
              "type": "string"
            },
            {
              "editor_key": "source",
              "type": "string",
              "optional": true
            }
          ],
          "format": {
            "ref": "mdx_format"
          }
        }
      },
      "content": {
        "parser": "content",
        "options": {
          "editor_key": "code_content",
          "allow_nested": false,
          "style": {
            "output": "block",
            "block": {
              "leading": "\n",
              "trailing": "\n",
              "indent": ""
            }
          }
        }
      }
    }
  }
}
